 [ -z "${cpu_arch}" ] && cpu_arch="ARMv8 Processor"
 cpu_cores="$(cat "/proc/cpuinfo" | grep "processor" | wc -l)"
 
-if grep -q "bcm27xx" "/etc/openwrt_release"; then
-	cpu_freq="$(vcgencmd get_config arm_freq | awk -F '=' '{print $2}')Mhz"
